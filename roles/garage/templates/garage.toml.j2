metadata_dir = "{{ garage_metadata_dir }}"
data_dir = "{{ garage_data_dir }}"
db_engine = "sqlite"

replication_factor = {{ garage_replication_factor }}

rpc_bind_addr = "[::]:3901"
rpc_public_addr = "[{{ tailscale_ipv6_address }}]:3901"
rpc_secret = "{{ garage.rpc_secret }}"

[s3_api]
s3_region = "garage"
api_bind_addr = "0.0.0.0:3900"
root_domain = ".s3.sams.wtf"

[s3_web]
bind_addr = "0.0.0.0:3902"
root_domain = ".site.s3.sams.wtf"
index = "index.html"

[admin]
api_bind_addr = "0.0.0.0:3903"
admin_token = "{{ garage.admin_token }}"
metrics_token = "{{ garage.metrics_token }}"
